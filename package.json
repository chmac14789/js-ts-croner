{
  "name": "croner",
  "version": "4.0.61",
  "description": "Trigger functions in javascript using Cron syntax. No deps. All features.",
  "author": "Hexagon <github.com/hexagon>",
  "contributors": [
    {
      "name": "Pehr Boman",
      "email": "github.com/unkelpehr"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hexagon/croner"
  },
  "bugs": {
    "url": "https://github.com/hexagon/croner/issues"
  },
  "files": [
    "dist/*",
    "src/*",
    "types/*",
    "dist-legacy/*",
    "SECURITY.md"
  ],
  "keywords": [
    "cron",
    "parser",
    "croner",
    "sheduler",
    "timer",
    "isomorphic"
  ],
  "scripts": {
    "test": "uvu test test.croner.js",
    "test:dist": "uvu test",
    "test:coverage": "c8 --include=src npm test",
    "test:lint": "eslint ./**/*.js ./**/*.cjs",
    "test:lint:fix": "eslint --fix  ./**/*.js ./**/*.cjs",
    "build": "npm run test:lint && npm run build:typings && npm run build:webpack && npm run test:coverage",
    "build:webpack": "webpack",
    "build:typings": "tsc"
  },
  "type": "module",
  "main": "./dist-legacy/croner.cjs",
  "browser": "./dist/croner.min.js",
  "module": "./src/croner.js",
  "exports": {
    ".": {
      "import": "./src/croner.js",
      "require": "./dist-legacy/croner.cjs",
      "browser": "./dist/croner.min.js"
    },
    "./minified": {
      "import": "./dist/croner.min.mjs",
      "require": "./dist/croner.min.js",
      "browser": "./dist/croner.min.js"
    }
  },
  "types": "types/croner.d.ts",
  "devDependencies": {
    "c8": "^7.10.0",
    "eslint": "^8.1.0",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1"
  },
  "license": "MIT"
}
